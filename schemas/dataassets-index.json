{
  "settings": {
    "analysis": {
      "analyzer": {
        "title_ngram_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "char_filter": "dh_char",
          "filter": [
            "lowercase",
            "dh_synonym_filter",
            "ngram_title"
          ]
        },
        "title_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "char_filter": "dh_char",
          "filter": [
            "lowercase",
            "dh_synonym_filter"
          ]
        },
        "text_content_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "char_filter": "dh_char",
          "filter": [
            "lowercase",
            "dh_synonym_filter",
            "dh_stop",
            "dh_snow"
          ]
        },
        "lowercase_keyword": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": [
            "lowercase"
          ]
        }
      },
      "filter": {
        "ngram_title": {
          "type": "ngram",
          "min_gram": "4",
          "max_gram": "10"
        },
        "dh_synonym_filter": {
          "type": "synonym",
          "synonyms": [
            "intelligent transportation systems => its",
            "department of transportation => dot"
          ]
        },
        "dh_stop": {
          "type": "stop",
          "stopwords": "_english_"
        },
        "dh_snow": {
          "type": "snowball",
          "language": "English"
        }
      },
      "char_filter": {
        "dh_char": {
          "type": "mapping",
          "mappings": [
            "++ => plusplus",
            "# => sharp"
          ]
        }
      }
    },
    "index": {
      "max_ngram_diff": 6
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "text"
      },
      "name": {
        "type": "text",
        "analyzer": "title_analyzer",
        "fields": {
          "substring": {
            "type": "text",
            "analyzer": "title_ngram_analyzer",
            "search_analyzer": "title_analyzer"
          }
        }
      },
      "description": {
        "type": "text",
        "analyzer": "text_content_analyzer"
      },
      "accessLevel": {
        "type": "text",
        "analyzer": "lowercase_keyword"
      },
      "lastUpdate": {
        "type": "date",
        "format": "strict_date_optional_time||epoch_millis"
      },
      "tags": {
        "type": "text",
        "analyzer": "title_analyzer"
      },
      "sourceUrl": {
        "type": "text",
        "index": false
      },
      "dhId": {
        "type": "text",
        "analyzer": "lowercase_keyword"
      },
      "dhLastUpdate": {
        "type": "date",
        "format": "strict_date_optional_time||epoch_millis"
      },
      "dhSourceName": {
        "type": "text",
        "analyzer": "lowercase_keyword"
      },
      "metrics": {
        "properties": {
          "downloadsTotal": {
            "type": "integer"
          },
          "pageViewsLastMonth": {
            "type": "integer"
          },
          "pageViewsTotal": {
            "type": "integer"
          }
        }
      },
      "dhProjects": {
        "type": "text",
        "index": false
      },
      "dhDataTypes": {
        "type": "text",
        "index": false
      },
      "dhType": {
        "type": "text"
      }
    }
  }
}

